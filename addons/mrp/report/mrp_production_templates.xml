<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_mrporder">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.internal_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-xs-12">
                            <h2><span t-field="o.name"/></h2>
                        </div>
                    </div>
                    <div class="row mt32 mb32">
                        <div class="col-xs-3" t-if="o.origin">
                            <strong>Source Document:</strong><br/>
                            <span t-field="o.origin"/>
                        </div>
                        <div class="col-xs-3">
                            <strong>Responsible:</strong><br/>
                            <span t-field="o.user_id"/>
                        </div>
                        <div class="col-xs-3">
                            <strong>Scheduled Date:</strong><br/>
                            <span t-field="o.date_planned_start"/>
                            <span t-if="o.date_planned_finished"> - <span t-field="o.date_planned_finished"/></span>
                        </div>
                    </div>

                    <div class="row mt32 mb32">
                        <div class="col-xs-3">
                            <strong>Finished Product:</strong><br/>
                            <span t-field="o.product_id"/>
                        </div>
                        <div class="col-xs-3">
                            <strong>Quantity to Produce:</strong><br/>
                            <span t-field="o.product_qty"/>
                            <span t-field="o.product_uom_id.name" groups="product.group_uom"/>
                        </div>
                        <div class="col-xs-3">
                            <strong>Printing date:</strong><br/>
                            <span t-esc="time.strftime('%Y-%m-%d')"
                                  t-options='{"widget": "date"}'/>
                        </div>
                    </div>

                    <div t-if="o.workorder_ids">
                        <h3>Planned Operations</h3>
                        <table class="table table-condensed">
                            <tr>
                                <td><strong>Operation</strong></td>
                                <td><strong>WorkCenter</strong></td>
                                <td><strong>No. Of Minutes</strong></td>
                            </tr>
                            <tr t-foreach="o.workorder_ids" t-as="line2">
                                <td><span t-field="line2.name"/></td>
                                <td><span t-field="line2.workcenter_id.name"/></td>
                                <td><span t-field="line2.duration_expected"/></td>
                            </tr>
                        </table>
                    </div>

                    <h3 t-if="o.move_raw_ids">Products to Consume</h3>
                    <table class="table table-condensed" t-if="o.move_raw_ids">
                        <t t-set="has_serial_number" t-value="0" groups="stock.group_production_lot"/>
                        <t t-foreach="o.move_raw_ids" t-as="t">
                            <t t-foreach="t.move_line_ids" t-as="lt">
                                <t t-if="lt.lot_id or lt.lot_name">
                                    <t t-set="has_serial_number" t-value="1"/>
                                </t>
                            </t>
                        </t>
                        <t t-set="has_location" t-value="0" groups="stock.group_stock_multi_locations"/>
                        <t t-foreach="o.move_raw_ids" t-as="t">
                            <t t-foreach="t.move_line_ids" t-as="lt">
                                <t t-set="has_location" t-value="lt.location_id.id"/>
                            </t>
                        </t>
                        <thead>
                            <tr>
                                <th><strong>Product</strong></th>
                                <th><strong>Quantity</strong></th>
                                <th>
                                    <span t-if="has_location"><strong>From</strong></span>
                                </th>
                                <th class="text-center">
                                    <span t-if="has_serial_number"><strong>Lot/Serial Number</strong></span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="o.move_raw_ids">
                                <t t-foreach="o.move_raw_ids" t-as="line">
                                    <t t-foreach="line.move_line_ids" t-as="ml">
                                        <tr>
                                            <td>
                                                <t t-if="product_name != line.product_id.display_name">
                                                    <span t-field="line.product_id"/>
                                                </t>
                                                <t t-set="product_name" t-value="line.product_id.display_name"/>
                                            </td>
                                            <td>
                                                <span t-if="ml.product_qty" t-esc="ml.product_qty"/>
                                                <span t-if="not ml.product_qty" t-esc="ml.qty_done"/>
                                                <span t-field="line.product_id.uom_id" groups="product.group_uom"/>
                                            </td>
                                            <td>
                                                <span t-if="has_location" t-field="line.location_id"/>
                                            </td>
                                            <td width="20%" class="text-center">
                                                <t t-if="has_serial_number and (ml.lot_id or ml.lot_name)">
                                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', ml.lot_id.name, 600, 100)" style="width:100%;height:35px"/><br/>
                                                    <span t-if="ml.lot_id" t-field="ml.lot_id"/>
                                                    <span t-if="not ml.lot_id" t-field="ml.lot_name"/>
                                                </t>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                <t t-foreach="o.move_raw_ids" t-as="line">
                                    <tr t-if="not line.move_line_ids">
                                        <td>
                                            <span t-field="line.product_id"/>
                                        </td>
                                        <td>
                                            <span t-field="line.product_uom_qty"/>
                                            <span t-field="line.product_uom.name" groups="product.group_uom"/>
                                        </td>
                                        <td colspan="2"> This product cannot be  reserved.
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </t>
</template>

<template id="production_message">
    <t t-if="move.move_id.raw_material_production_id">
        <t t-set="message">Consumed</t>
    </t>
    <t t-if="move.move_id.production_id">
        <t t-set="message">Produced</t>
    </t>
    <strong><t t-esc="message"/> quantity has been updated.</strong>
</template>

<template id="track_production_move_template">
    <div>
        <t t-call="mrp.production_message"/>
        <t t-call="stock.message_body"/>
    </div>
</template>
</odoo>
