<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_share_link_wizard" model="ir.ui.view">
        <field name="name">mail.share.link.wizard</field>
        <field name="model">mail.share.link</field>
        <field name="arch" type="xml">
            <form string="Share Document">
                <group>
                    <field name="share_link" readonly="1" widget="CopyClipboardChar" options="{'string': 'Copy Link'}"/>
                </group>
                <group>
                    <field name="partner_ids" widget="many2many_tags_email" placeholder="Add contacts to share the document..."/>
                </group>
                <group>
                    <field name="note" placeholder="Add a note"/>
                </group>
                <footer>
                    <button string="Send" name="send_mail_action" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="mail_share_link_action" model="ir.actions.act_window">
        <field name="name">Share Document</field>
        <field name="res_model">mail.share.link</field>
        <field name="src_model">mail.share.link</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
