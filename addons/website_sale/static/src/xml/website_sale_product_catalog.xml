<?xml version="1.0" encoding="utf-8"?>
<template>

    <t t-name="website_sale.product_catalog">
        <div class="row products_container o_not_editable" contenteditable="false">
            <t t-if="!widget.products.length">
                <div class="text-center text-muted">
                    <t t-if="!widget.isProductsAvailable">
                        <h3>No product defined.</h3>
                        <p t-if="widget.isSalesManager">Click <i>'New'</i> in the top-right corner to create your first product.</p>
                    </t>
                    <t t-else="">
                        <h3>No products are publish yet.</h3>
                    </t>
                </div>
            </t>
            <t t-else="">
                <t t-set="size" t-value="widget.size"/>
                <t t-if="widget.isGrid">
                    <t t-set="products" t-value="widget.products"/>
                    <t t-call="website_sale.product_box"/>
                    <div class="col-md-12 col-sm-12 text-center mt16 mb16">
                        <a class="btn btn-default o-btn-all-products" href="/shop/">View All Products</a>
                    </div>
                </t>
                <t t-else="">
                    <div class="o-product-catalog-slider">
                        <div t-att-id="widget.sliderID" class="carousel slide" data-ride="carousel" data-interval="false">
                            <div class="carousel-inner">
                                <t t-foreach="widget.products" t-as="products">
                                    <div t-attf-class="item #{products_index ==  0 ? 'active' : ''}">
                                        <t t-call="website_sale.product_box"/>
                                    </div>
                                </t>
                            </div>
                        </div>
                        <t t-if="widget.products.length > 1 and !widget.isMobile">
                            <a class="o_control left fa fa-chevron-left btn btn-default" t-att-href="'#' + widget.sliderID" data-slide="prev"></a>
                            <a class="o_control right fa fa-chevron-right btn btn-default" t-att-href="'#' + widget.sliderID" data-slide="next"></a>
                        </t>
                    </div>
                    <div class="col-md-12 col-sm-12 text-center mt16 mb16">
                        <a t-if="widget.products.length > 1 and widget.isMobile" class="fa fa-chevron-left btn btn-default" t-att-href="'#' + widget.sliderID" data-slide="prev"></a>
                        <a class="btn btn-default o-btn-all-products" href="/shop/">View All Products</a>
                        <a t-if="widget.products.length > 1 and widget.isMobile" class="fa fa-chevron-right btn btn-default" t-att-href="'#' + widget.sliderID"
                        data-slide="next"></a>
                    </div>
                </t>
            </t>
        </div>
    </t>

    <!-- Product Box -->
    <t t-name="website_sale.product_box">
        <t t-foreach="products" t-as="product">
            <div t-attf-class="col-md-#{size} col-sm-#{size}" t-att-data-product-id="product.id" t-att-data-product-name="product.name">
                <div class="o-product-item mb8">
                    <div class="o-product-image">
                        <a t-attf-href="/shop/product/#{product.id}">
                            <img t-attf-src="/web/image/product.template/#{product.id}/image/300x300" class="img img-responsive"/>
                        </a>
                        <span class="rating"/>
                    </div>
                    <div class="o-product-details">
                        <strong>
                            <a class="o-product-name" t-attf-href="/shop/product/#{product.id}">
                                <t t-esc="product.name"/>
                            </a>
                        </strong>
                        <strong t-if="product.product_variant_count gte 1">
                            <t t-esc="product.price" />
                        </strong>
                    </div>
                    <div class="o-product-description text-info">
                        <t t-if="product.description_sale" t-raw="product.description_sale"/>
                    </div>
                    <div class="o-action-buttons">
                        <div class="btn-group btn-group-justified" role="group">
                            <div class="btn-group o_add_to_cart" role="group">
                                <form t-if="product.product_variant_count == 1" action="/shop/cart/update" method="post">
                                    <input name="product_id" type="hidden" t-att-value="product.product_variant_id"/>
                                    <button type="submit" class="btn btn-default text-primary" title="Add to cart" t-att-data-product-variant-id="product.product_variant_id">
                                        <i class="fa fa-shopping-cart"/>
                                    </button>
                                </form>
                                <a t-if="product.product_variant_count gt 1" class="btn btn-default text-primary" t-attf-href="/shop/product/#{product.id}" title="Add to cart">
                                    <i class="fa fa-shopping-cart"/>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </t>

    <!-- Category Selection Dialog -->
    <t t-name="website_sale.categorySelection">
        <div class="form-group">
            <div class="alert alert-warning hidden">
                Selected catagory has no saleable products. Please select another category!
            </div>
            <label class="col-sm-2 control-label">Select Category</label>
            <div class="col-sm-10">
                <input type="hidden" name="selection"/>
            </div>
        </div>
    </t>

    <!-- Manual Selection Dialog -->
    <t t-name="website_sale.manualSelection">
        <div>
            <div class="form-group">
                <label for="products" class="col-sm-2 control-label">Select Products</label>
                <div class="col-sm-10">
                    <input type="hidden" name="selection"/>
                </div>
            </div>
        </div>
    </t>

</template>
